package cicle;

import java.util.Scanner;



public class Method_Arr {

	
	public static void main(String[] args) {
	  Scanner sc= new Scanner(System.in);
	  System.out.println("enter how long do you want to be you array");
	  int number= sc.nextInt();
	  int[] arr = InsertValue(number);
	  for (int i=0;i<number;i++){
		  System.out.println(arr[i]);
	  }

	}
	private static int[] InsertValue(int number) {
		int [] arrWhitNumbers=new int[number];
		for (int i=0;i<arrWhitNumbers.length;i++){
			System.out.println("Enter a number:");
			Scanner sc=new Scanner(System.in);
			int arrNumber= sc.nextInt();
			arrWhitNumbers[i]=arrNumber;
		}
		return arrWhitNumbers;
		
	}

}
